<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/activeModeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/modeSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/modeManual"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuel"
                android:checkable="true"
                android:checked="true"
                app:chipCornerRadius="8dp"
                android:minHeight="48dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/modeAuto"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:checkable="true"
                app:chipCornerRadius="8dp"
                android:minHeight="48dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/modeObstacle"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obstacle"
                android:checkable="true"
                app:chipCornerRadius="8dp"
                android:minHeight="48dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/modePir"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÃ©tection PIR"
                android:checkable="true"
                app:chipCornerRadius="8dp"
                android:minHeight="48dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/modeCap"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cap"
                android:checkable="true"
                app:chipCornerRadius="8dp"
                android:minHeight="48dp" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>