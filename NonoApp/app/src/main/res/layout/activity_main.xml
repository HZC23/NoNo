<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!-- Toolbar / Status -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="NonoApp"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">

        <!-- Right side status (you can inflate or update these programmatically) -->
        <ImageView
            android:id="@+id/iv_ble_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:contentDescription="Bluetooth status"
            android:src="@drawable/ic_bluetooth" />

        <TextView
            android:id="@+id/tv_connection_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_battery_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="—%"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/connection_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Scan"/>

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Disconnect"/>
    </LinearLayout>

    <!-- Left control area (joystick + stop) -->
    <FrameLayout
        android:id="@+id/left_control_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/connection_buttons"
        app:layout_constraintBottom_toTopOf="@id/action_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_telemetry_area"
        app:layout_constraintWidth_percent="0.55">

        <!-- TODO: Remplace ceci par ta custom JoystickView -->
        <FrameLayout
            android:id="@+id/joystick_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hzc23.nonocontroller.JoystickView
                android:id="@+id/joystick_view"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center" />

        </FrameLayout>
    </FrameLayout>

    <!-- Right telemetry area -->
    <LinearLayout
        android:id="@+id/right_telemetry_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/connection_buttons"
        app:layout_constraintBottom_toTopOf="@id/action_buttons"
        app:layout_constraintStart_toEndOf="@id/left_control_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <!-- State -->
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State: —"
            android:textStyle="bold"
            android:paddingBottom="6dp"
            android:textSize="16sp" />

        <!-- TODO: Remplace par ta CompassView custom -->
        <FrameLayout
            android:id="@+id/compass_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/rounded_card_background"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <com.hzc23.nonocontroller.CompassView
                    android:id="@+id/compass_view"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heading: —°"
                    android:layout_marginTop="6dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Distance -->
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: — cm"
            android:textSize="18sp"
            android:layout_marginBottom="6dp" />

        <!-- Battery -->
        <TextView
            android:id="@+id/tv_battery_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery" />
        <ProgressBar
            android:id="@+id/battery_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="50"
            android:max="100"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tv_battery_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%" />

    </LinearLayout>

    <!-- Action buttons row -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_log">

        <Button
            android:id="@+id/btn_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="LIGHT ON/OFF" />

        <Button
            android:id="@+id/btn_calibrate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CALIBRATE" />

        <Button
            android:id="@+id/btn_goto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GOTO" />

        <Button
            android:id="@+id/btn_turn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TURN" />
    </LinearLayout>

    <!-- Log footer (single line, scrollable if needed) -->
    <TextView
        android:id="@+id/tv_log"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Emergency Stop FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_emergency_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stop"
        android:contentDescription="Emergency Stop"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@id/tv_log"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>