<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com.tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?android:colorBackground"
    tools:context=".MainActivity"
    android:padding="@dimen/spacing_medium">

    <!-- Left Panel: Directional Controller -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <include
            android:id="@+id/directionalControllerXml"
            layout="@layout/directional_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Right Panel: ScrollView for other controls -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/spacing_medium"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Connection Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

                <LinearLayout
                    android:id="@+id/connectionStatusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/connectionStatusTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disconnected"
                        android:textColor="?attr/colorOnBackground"
                        android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConnect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mode Band -->
            <include
                android:id="@+id/modeBandXml"
                layout="@layout/mode_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large" />

            <!-- Sensor Panel -->
            <include
                android:id="@+id/sensorPanelXml"
                layout="@layout/sensor_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large" />

            <!-- Serial Monitor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serial Monitor"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:background="?attr/colorSurface">

                        <TextView
                            android:id="@+id/serialMonitorTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_medium"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp"
                            android:typeface="monospace" />
                    </ScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>